<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="WpfSandBox.GradientControl"
	x:Name="UserControl"
	d:DesignWidth="1022.5" d:DesignHeight="601.5">

	<Rectangle Margin="0" Stroke="Black" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center">
		<Rectangle.Fill>
			<RadialGradientBrush>
				<GradientStop Color="Black" Offset="0"/>
				<GradientStop Color="White" Offset="1"/>
			</RadialGradientBrush>
		</Rectangle.Fill>
	</Rectangle>
</UserControl>